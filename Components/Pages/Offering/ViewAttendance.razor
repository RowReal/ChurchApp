    {
        try
        {
            attendance = await AttendanceService.GetAttendanceByIdAsync(attendanceId);

            if (attendance != null)
            {
                // Load the worker who recorded this attendance
                await LoadRecordedByWorker();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading attendance record: {ex.Message}");
        }
    }


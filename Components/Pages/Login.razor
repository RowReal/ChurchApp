@page "/login"
@layout Components.Layout.LoginLayout
@using ChurchApp.Models
@using ChurchApp.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>BCC ServiceHub - Login</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="church-logo">
                <div class="church-logo-container">
                    <img src="/images/bcc-logo.png" alt="BCC Logo" class="church-logo-img" />
                </div>
            </div>
            <h2>BCC ServiceHub</h2>
            <p>Service Management System</p>
        </div>

        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="workerId">Worker ID</label>
                <InputText id="workerId" @bind-Value="loginModel.WorkerId" class="form-control" placeholder="Enter your Worker ID" />
                <ValidationMessage For="@(() => loginModel.WorkerId)" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" @bind-Value="loginModel.Password" class="form-control" placeholder="Enter your password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    @errorMessage
                </div>
            }

            <button type="submit" class="btn-login" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="loading-spinner"></span>
                    <span>Logging in...</span>
                }
                else
                {
                    <span>Login</span>
                }
            </button>
        </EditForm>

        <div class="login-links">
            <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var isValid = await AuthService.LoginAsync(loginModel.WorkerId, loginModel.Password);

            if (isValid)
            {
                var worker = AuthService.CurrentWorker;

                if (worker != null && worker.IsFirstLogin)
                {
                    // Redirect to change password page
                    Navigation.NavigateTo($"/change-password/{worker.Id}");
                }
                else
                {
                    // Redirect to dashboard
                    Navigation.NavigateTo("/");
                }
            }
            else
            {
                errorMessage = "Invalid Worker ID or Password";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred during login: {ex.Message}";
            Console.WriteLine($"Login error: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }

        isLoading = false;
        StateHasChanged();
    }
}


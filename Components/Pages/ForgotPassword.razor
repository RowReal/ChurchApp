@page "/forgot-password"
@layout Components.Layout.LoginLayout
@using ChurchApp.Models
@using ChurchApp.Services
@inject WorkerService WorkerService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject EmailService EmailService

<PageTitle>BCC ServiceHub - Forgot Password</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="church-logo">
                <div class="church-logo-container">
                    <img src="/images/bcc-logo.png" alt="BCC Logo" class="church-logo-img" />
                </div>
            </div>
            <h2>Reset Password</h2>
            <p>Enter your details to reset your password</p>
        </div>

        @if (!passwordResetSuccess)
        {
            <EditForm Model="@forgotPasswordModel" OnValidSubmit="@HandleForgotPassword">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label for="workerId">Worker ID</label>
                    <InputText id="workerId" @bind-Value="forgotPasswordModel.WorkerId"
                               class="form-control" placeholder="Enter your Worker ID" />
                    <ValidationMessage For="@(() => forgotPasswordModel.WorkerId)" />
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <InputText id="email" @bind-Value="forgotPasswordModel.Email"
                               class="form-control" placeholder="Enter your registered email" />
                    <ValidationMessage For="@(() => forgotPasswordModel.Email)" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        @errorMessage
                    </div>
                }

                <button type="submit" class="btn-login" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="loading-spinner"></span>
                        <span>Processing...</span>
                    }
                    else
                    {
                        <span>Reset Password</span>
                    }
                </button>
            </EditForm>

            <div class="login-links">
                <a href="/login" class="forgot-password">Back to Login</a>
            </div>
        }
        else
        {
            <!-- Password Display Card -->
            <div class="success-display">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 class="success-title">Password Reset Successful!</h3>
              <p class="success-message">
    Your temporary password has been sent to your registered email.
    Please check your inbox.
</p>
                
                <div class="password-box">
                    <div class="password-label">Temporary Password</div>
                    <div class="password-value">XXXXXXXXX</div>
                    <button class="btn-copy" @onclick="CopyPasswordToClipboard">
                        <i class="fas fa-copy"></i> Copy Password
                    </button>
                </div>

                <div class="password-note">
                    <i class="fas fa-info-circle"></i>
                    <span>Please change this password after logging in</span>
                </div>

                <div class="countdown-text">
                    Redirecting to login in @countdown seconds...
                </div>

                <a href="/login" class="btn-login">Go to Login</a>
            </div>
        }
    </div>
</div>

@code {
    private ForgotPasswordModel forgotPasswordModel = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private bool passwordResetSuccess = false;
    private string generatedPassword = string.Empty;
    private int countdown = 10;
    private System.Timers.Timer? countdownTimer;

    private async Task HandleForgotPassword()
    {
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var result = await WorkerService.ResetPasswordAsync(
                forgotPasswordModel.WorkerId, 
                forgotPasswordModel.Email
            );

            if (result.Success)
            {
                generatedPassword = result.GeneratedPassword ?? "temp123";
                // SEND EMAIL
    await EmailService.SendEmailAsync(new EmailMessage
    {
        ToEmail = forgotPasswordModel.Email,
        ToName = forgotPasswordModel.WorkerId,
        Subject = "BCC Service Hub - Password Reset",
        Body = $@"
            <h3>Password Reset Successful</h3>
            <p>Your new temporary password is:</p>
            <h2 style='color:#2c3e50'>{generatedPassword}</h2>
            <p>Please login and change it immediately.</p>",
        IsHtml = true
    });
                passwordResetSuccess = true;
                StartCountdown();
            }
            else
            {
                errorMessage = result.ErrorMessage ?? "Unable to reset password. Please check your details.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while resetting password. Please try again.";
        }

        isLoading = false;
        StateHasChanged();
    }

    private void StartCountdown()
    {
        countdownTimer = new System.Timers.Timer(1000);
        countdownTimer.Elapsed += (sender, e) => {
            countdown--;
            if (countdown <= 0)
            {
                countdownTimer.Stop();
                countdownTimer.Dispose();
                Navigation.NavigateTo("/login");
            }
            InvokeAsync(StateHasChanged);
        };
        countdownTimer.Start();
    }

    private async Task CopyPasswordToClipboard()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", generatedPassword);
            // Show a temporary success message (you could use a toast notification here)
            await JSRuntime.InvokeVoidAsync("alert", "Password copied to clipboard!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please select and copy the password manually.");
        }
    }

    public void Dispose()
    {
        countdownTimer?.Stop();
        countdownTimer?.Dispose();
    }
}


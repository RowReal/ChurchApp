@page "/workforce/view-worker/{workerId:int}"
@layout Components.Layout.MainLayout
@using ChurchApp.Services
@using ChurchApp.Models
@inject WorkerService WorkerService
@inject AuthService AuthService
@inject NavigationManager Navigation

@if (AuthService.IsAuthenticated)
{
    <PageTitle>View Worker - Workforce</PageTitle>

    <div class="container-fluid py-4">
        @if (worker != null)
        {
            <!-- Header -->
            <div class="row mb-4">
                <div class="col">
                    <h2>Worker Information</h2>
                    <p class="text-muted">View basic worker information for approval context</p>
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-secondary" @onclick="NavigateBack">
                        <i class="fas fa-arrow-left me-2"></i>Back to Inbox
                    </button>
                </div>
            </div>

            <!-- Basic Worker Info -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Basic Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="40%">Worker ID:</th>
                                            <td><strong>@worker.WorkerId</strong></td>
                                        </tr>
                                        <tr>
                                            <th>Full Name:</th>
                                            <td>@worker.FirstName @worker.MiddleName @worker.LastName</td>
                                        </tr>
                                        <tr>
                                            <th>Email:</th>
                                            <td>@(worker.Email ?? "Not provided")</td>
                                        </tr>
                                        <tr>
                                            <th>Phone:</th>
                                            <td>@(worker.Phone ?? "Not provided")</td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="40%">Directorate:</th>
                                            <td>@(worker.Directorate?.Name ?? "Not assigned")</td>
                                        </tr>
                                        <tr>
                                            <th>Department:</th>
                                            <td>@(worker.Department?.Name ?? "Not assigned")</td>
                                        </tr>
                                        <tr>
                                            <th>Role:</th>
                                            <td><span class="badge bg-secondary">@worker.Role</span></td>
                                        </tr>
                                        <tr>
                                            <th>Status:</th>
                                            <td>
                                                <span class="badge @(worker.IsActive ? "bg-success" : "bg-secondary")">
                                                    @(worker.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Info Sidebar -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Quick Information</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <th>Last Login:</th>
                                    <td>@(worker.LastLoginDate?.ToString("dd MMM yyyy") ?? "Never")</td>
                                </tr>
                                <tr>
                                    <th>Date Joined:</th>
                                    <td>@(worker.DateJoinedChurch?.ToString("dd MMM yyyy") ?? "Not provided")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                <h4>Worker Not Found</h4>
                <p class="text-muted">The requested worker information could not be found.</p>
                <button class="btn btn-primary" @onclick="NavigateBack">
                    <i class="fas fa-arrow-left me-2"></i>Back to Inbox
                </button>
            </div>
        }
    </div>
}
else
{
    <!-- Not authenticated content -->
}

@code {
    [Parameter]
    public int workerId { get; set; }

    private Worker? worker = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadWorkerData();
    }

    private async Task LoadWorkerData()
    {
        try
        {
            worker = await WorkerService.GetWorkerByIdAsync(workerId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading worker: {ex.Message}");
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/workforce/my-inbox");
    }
}
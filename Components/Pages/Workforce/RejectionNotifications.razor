@page "/workforce/rejection-notifications"
@layout Components.Layout.MainLayout
@using ChurchApp.Services
@using ChurchApp.Models
@inject WorkforceService WorkforceService
@inject AuthService AuthService
@inject NavigationManager Navigation

@if (AuthService.IsAuthenticated)
{
    <PageTitle>Rejection Notifications - Workforce</PageTitle>

    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col">
                <h2>Rejection Notifications</h2>
                <p class="text-muted">Review rejected profile update requests and make corrections</p>
            </div>
            <div class="col-auto">
                <span class="badge bg-danger fs-6">@rejectionNotifications.Count Unread</span>
            </div>
        </div>

        @if (rejectionNotifications.Any())
        {
            <div class="row">
                <div class="col-12">
                    @foreach (var notification in rejectionNotifications)
                    {
                        <div class="card mb-4 @(notification.IsRead ? "border" : "border-danger")">
                            <div class="card-header @(notification.IsRead ? "bg-light" : "bg-danger text-white") d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Profile Update Rejected
                                    @if (!notification.IsRead)
                                    {
                                        <span class="badge bg-warning ms-2">New</span>
                                    }
                                </h5>
                                <div>
                                    <small>Rejected: @notification.RejectedDate.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Rejection Details -->
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <h6>Rejection Information</h6>
                                        <table class="table table-sm table-borderless">
                                            <tr>
                                                <th width="40%">Rejected By:</th>
                                                <td>@notification.RejectedByWorker.FirstName @notification.RejectedByWorker.LastName</td>
                                            </tr>
                                            <tr>
                                                <th>Rejected On:</th>
                                                <td>@notification.RejectedDate.ToString("MMM dd, yyyy HH:mm")</td>
                                            </tr>
                                            <tr>
                                                <th>Status:</th>
                                                <td>
                                                    @if (notification.IsRead)
                                                    {
                                                        <span class="badge bg-secondary">Read</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Unread</span>
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Rejection Reason</h6>
                                        <div class="alert alert-danger">
                                            <i class="fas fa-info-circle me-2"></i>
                                            @notification.RejectionReason
                                        </div>
                                    </div>
                                </div>

                                <!-- Original Request Info -->
                                <div class="mb-4">
                                    <h6 class="text-primary">Original Request Details</h6>
                                    @{
                                        var originalChanges = System.Text.Json.JsonSerializer.Deserialize<ProposedChanges>(
                                        notification.ProfileUpdateRequest.ProposedChanges);
                                    }
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead class="table-light">
                                                <tr>
                                                    <th width="30%">Field</th>
                                                    <th width="35%">Original Value</th>
                                                    <th width="35%">Rejected Value</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- Add similar change display logic as in MyInbox -->
                                                <tr>
                                                    <td><strong>Sample Field</strong></td>
                                                    <td><span class="text-muted">Original value</span></td>
                                                    <td><span class="text-danger">Rejected value</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary" @onclick="() => NavigateToCorrection(notification.ProfileUpdateRequestId)">
                                        <i class="fas fa-edit me-1"></i>Make Corrections
                                    </button>
                                    <button class="btn btn-outline-secondary" @onclick="() => MarkAsRead(notification.Id)">
                                        <i class="fas fa-check me-1"></i>Mark as Read
                                    </button>
                                    <button class="btn btn-outline-danger" @onclick="() => CancelRequest(notification.ProfileUpdateRequestId)">
                                        <i class="fas fa-times me-1"></i>Cancel Request
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h4>No Rejection Notifications</h4>
                <p class="text-muted">You don't have any rejection notifications at this time.</p>
                <a href="/workforce/my-profile" class="btn btn-primary">
                    <i class="fas fa-user me-2"></i>Go to My Profile
                </a>
            </div>
        }
    </div>
}
else
{
    <!-- Not authenticated content (same as before) -->
}

@code {
    private List<RejectionNotification> rejectionNotifications = new();

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated && AuthService.CurrentWorker != null)
        {
            await LoadRejectionNotifications();
        }
    }

    private async Task LoadRejectionNotifications()
    {
        try
        {
            var workerId = AuthService.CurrentWorker!.Id;
            rejectionNotifications = await WorkforceService.GetRejectionNotificationsAsync(workerId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading rejection notifications: {ex.Message}");
        }
    }

    private async Task MarkAsRead(int notificationId)
    {
        try
        {
            var success = await WorkforceService.MarkRejectionAsReadAsync(notificationId);
            if (success)
            {
                await LoadRejectionNotifications();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error marking notification as read: {ex.Message}");
        }
    }

    private void NavigateToCorrection(int requestId)
    {
        Navigation.NavigateTo($"/workforce/correct-profile/{requestId}");
    }

    private async Task CancelRequest(int requestId)
    {
        // Implementation to cancel the rejected request
        // You can reuse the CancelUpdateRequestAsync method
        try
        {
            var success = await WorkforceService.CancelUpdateRequestAsync(requestId);
            if (success)
            {
                await LoadRejectionNotifications();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error canceling request: {ex.Message}");
        }
    }
}
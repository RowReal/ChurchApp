<style>
    /* Colors */
    :root {
        --dark-purple: #3a0f6f;
        --dark-purple-contrast: #fff;
        --light-blue: #2aa9e0;
        --green: #28a745; /* bootstrap success */
    }

    /* Header */
    .bg-dark-purple {
        background-color: var(--dark-purple) !important;
    }

    .text-dark-purple {
        color: var(--dark-purple) !important;
    }

    /* Buttons */
    .btn-dark-purple {
        background-color: var(--dark-purple);
        color: #fff;
        border: none;
    }

        .btn-dark-purple:hover,
        .btn-dark-purple:focus {
            background-color: #311154;
            color: #fff;
        }

    .btn-outline-dark-purple {
        color: var(--dark-purple);
        border: 2px solid var(--dark-purple);
        background: transparent;
    }

        .btn-outline-dark-purple:hover,
        .btn-outline-dark-purple:focus {
            background-color: var(--dark-purple);
            color: #fff;
        }

    /* Avatars (circle containers for SVG icons) */
    .avatar {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        flex-shrink: 0;
        box-shadow: 0 1px 2px rgba(0,0,0,0.04);
    }

    .avatar-lg {
        width: 56px;
        height: 56px;
    }

    .avatar-md {
        width: 48px;
        height: 48px;
    }

    /* purple filled avatar */
    .avatar-purple {
        background-color: var(--dark-purple);
    }

    /* green filled avatar */
    .avatar-green {
        background-color: var(--green);
    }

    /* light-blue filled avatar */
    .avatar-lightblue {
        background-color: var(--light-blue);
    }

    /* purple outlined avatar (only border, white background) */
    .avatar-purple-outline {
        background-color: #fff;
        border: 2px solid var(--dark-purple);
    }

    /* Avatar SVGs should be white inside filled avatars */
    .avatar-purple svg path,
    .avatar-green svg path,
    .avatar-lightblue svg path {
        fill: #ffffff;
    }

    /* In outlined avatar we use purple SVG stroke/fill */
    .avatar-purple-outline svg path {
        fill: var(--dark-purple);
    }

    /* Compact card adjustments to reduce vertical length */
    .compact-card {
        border-radius: 10px;
        overflow: hidden;
    }

    /* Reduce padding inside cards to make them shorter */
    .compact-body {
        padding: 0.65rem 0.9rem; /* slightly smaller padding */
    }

    /* Feature cards: make them compact and consistent height */
    .feature-card {
        min-height: 130px; /* compact but readable */
        display: flex;
        align-items: center;
    }

        /* Ensure card-body width in flex layout */
        .feature-card .card-body {
            width: 100%;
        }

    /* Smaller headline sizes to save vertical space */
    .display-6 {
        font-size: 1.25rem;
    }

    /* Smaller text & tightened margins */
    .card-title.small {
        margin-bottom: 0.25rem;
    }

    .card-text.small {
        margin-bottom: 0;
    }

    /* Quote / mission panel */
    .quote-panel {
        background-color: rgba(255,255,255,0.18); /* translucent white */
    }

    /* Make the quote text and footer purple so it's readable on translucent white */
    .quote-text {
        color: var(--dark-purple);
    }

    .quote-footer {
        color: var(--dark-purple);
    }

    /* Reduce spacing around big sections */
    .container.py-4, .container.py-3 {
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    /* Utility: neutralize stray bootstrap blue/yellow backgrounds on this page */
    :where(.bg-primary, .bg-warning) {
        background-color: transparent !important;
        color: inherit !important;
    }

    /* Accessibility: ensure sufficient contrast for small text */
    .card-text.small, .card-title.small {
        color: #495057; /* muted but readable */
    }

    /* Responsive tweak: slightly reduce feature-card min height on small screens */
    <style >
    @@media (max-width: 575.98px) {
        .feature-card

    {
        min-height: 120px;
    }

    .avatar-md {
        width: 40px;
        height: 40px;
    }

    }
</style>

</style>

@page "/change-password/{WorkerId:int}"
@layout Components.Layout.LoginLayout
@using ChurchApp.Models
@using ChurchApp.Services
@inject WorkerService WorkerService
@inject NavigationManager Navigation

<PageTitle>BCC ServiceHub - Change Password</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="church-logo">
                <div class="church-logo-container">
                    <img src="/images/bcc-logo.png" alt="BCC Logo" class="church-logo-img" />
                </div>
            </div>
            <h2>Change Password</h2>
            <p>Please set your new password</p>
        </div>

        <EditForm Model="@changePasswordModel" OnValidSubmit="@HandleChangePassword">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <InputText id="currentPassword" type="password" @bind-Value="changePasswordModel.CurrentPassword"
                           class="form-control" placeholder="Enter current password" />
                <ValidationMessage For="@(() => changePasswordModel.CurrentPassword)" />
                <small class="text-muted">Default password: <strong>default123</strong></small>
            </div>

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <InputText id="newPassword" type="password" @bind-Value="changePasswordModel.NewPassword"
                           class="form-control" placeholder="Enter new password" />
                <ValidationMessage For="@(() => changePasswordModel.NewPassword)" />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <InputText id="confirmPassword" type="password" @bind-Value="changePasswordModel.ConfirmPassword"
                           class="form-control" placeholder="Confirm new password" />
                <ValidationMessage For="@(() => changePasswordModel.ConfirmPassword)" />
            </div>

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">
                    @successMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    @errorMessage
                </div>
            }

            <button type="submit" class="btn-login" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="loading-spinner"></span>
                    <span>Updating...</span>
                }
                else
                {
                    <span>Change Password</span>
                }
            </button>
        </EditForm>

        <div class="login-links">
            <a href="/login" class="forgot-password">Back to Login</a>
        </div>
    </div>
</div>

@code {
    [Parameter] public int WorkerId { get; set; }

    private ChangePasswordModel changePasswordModel = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        // Verify the worker exists and is on first login
        var worker = await WorkerService.GetWorkerByIdAsync(WorkerId);
        if (worker == null || !worker.IsFirstLogin)
        {
            Navigation.NavigateTo("/login");
        }
    }

    private async Task HandleChangePassword()
    {
        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            // Verify current password
            var worker = await WorkerService.GetWorkerByIdAsync(WorkerId);
            if (worker != null)
            {
                // For first login, we'll use the default password verification
                var defaultPassword = "default123";
                if (changePasswordModel.CurrentPassword != defaultPassword)
                {
                    errorMessage = "Current password is incorrect. Please use the default password provided.";
                    isLoading = false;
                    StateHasChanged();
                    return;
                }

                // Change the password
                await WorkerService.ChangePasswordAsync(WorkerId, changePasswordModel.NewPassword);
                successMessage = "Password changed successfully! Redirecting to login...";

                // Redirect to login after 2 seconds
                await Task.Delay(2000);
                Navigation.NavigateTo("/login");
            }
            else
            {
                errorMessage = "Worker not found";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while changing password";
        }

        isLoading = false;
        StateHasChanged();
    }
}

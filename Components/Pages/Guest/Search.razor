@code {
    private List<Guest> searchResults = new();
    private Guest selectedGuest = null;
    private string searchName = "";
    private string searchPhone = "";
    private string searchGuestNumber = "";
    private DateTime? startDate = null;
    private DateTime? endDate = null;
    private string guestType = "";
    private string sortBy = "date";
    private bool isSearching = false;
    private bool hasSearched = false;

    private bool IsFIGDirectorateMember()
    {
        var worker = AuthService.CurrentWorker;
        if (worker == null) return false;

        var directorateName = worker.Directorate?.Name?.ToLowerInvariant() ?? "";
        var role = worker.Role?.ToLowerInvariant() ?? "";

        var isInFIG = directorateName.Contains("fig");
        var hasValidRole = role.Contains("head of directorate") ||
                          role.Contains("asst head of directorate") ||
                          role.Contains("directorate member") ||
                          AuthService.IsInRole("Church Admin") ||
                          AuthService.IsInRole("Pastor in Charge");

        return isInFIG && hasValidRole;
    }

    private async Task SearchGuests()
    {
        isSearching = true;
        hasSearched = true;

        try
        {
            // Get all guests first
            var allGuests = await GuestService.GetAllGuestsAsync();
            
            // Apply filters
            var query = allGuests.AsQueryable();

            if (!string.IsNullOrEmpty(searchName))
            {
                query = query.Where(g => 
                    g.FirstName.Contains(searchName, StringComparison.OrdinalIgnoreCase) ||
                    g.Surname.Contains(searchName, StringComparison.OrdinalIgnoreCase) ||
                    g.FullName.Contains(searchName, StringComparison.OrdinalIgnoreCase)
                );
            }

            if (!string.IsNullOrEmpty(searchPhone))
            {
                query = query.Where(g => 
                    g.PhoneNumber.Contains(searchPhone) ||
                    g.WhatsAppNumber.Contains(searchPhone) ||
                    g.CurrentPhoneNumber.Contains(searchPhone)
                );
            }

            if (!string.IsNullOrEmpty(searchGuestNumber))
            {
                query = query.Where(g => g.GuestNumber.Contains(searchGuestNumber));
            }

            if (startDate.HasValue)
            {
                query = query.Where(g => g.VisitingDate >= startDate.Value);
            }

            if (endDate.HasValue)
            {
                query = query.Where(g => g.VisitingDate <= endDate.Value);
            }

            if (!string.IsNullOrEmpty(guestType))
            {
                if (guestType == "first")
                    query = query.Where(g => !g.IsSecondTimer);
                else if (guestType == "second")
                    query = query.Where(g => g.IsSecondTimer);
            }

            // Apply sorting
            searchResults = sortBy switch
            {
                "name" => query.OrderBy(g => g.Surname).ThenBy(g => g.FirstName).ToList(),
                "number" => query.OrderBy(g => g.GuestNumber).ToList(),
                _ => query.OrderByDescending(g => g.VisitingDate).ToList()
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching guests: {ex.Message}");
        }
        finally
        {
            isSearching = false;
            StateHasChanged();
        }
    }

    private void ResetSearch()
    {
        searchName = "";
        searchPhone = "";
        searchGuestNumber = "";
        startDate = null;
        endDate = null;
        guestType = "";
        sortBy = "date";
        searchResults.Clear();
        hasSearched = false;
    }

    private async Task ViewGuestDetails(int guestId)
    {
        try
        {
            selectedGuest = await GuestService.GetGuestByIdAsync(guestId);
            // Open modal - you can reuse the modal logic from DailyList.razor
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading guest: {ex.Message}");
        }
    }

    private void MarkAsSecondTimer(int guestId)
    {
        Navigation.NavigateTo($"/guest/second-timer?guestId={guestId}");
    }

    private void ExportToExcel()
    {
        // Implement export logic here
